<div id="suggested-talks">
  <h2>Suggested Talks</h2>
  <div class="talks">
    <% suggested_talks.each do |talk| %>
      <%= erb :_suggested_talk, locals: { talk: talk } %>
    <%end %>
  </div>

  <h3>Suggest a Talk</h3>
  <form id="suggest-talk-form" method="POST" action="/talks">
    <label>Talk Name: <input id="talk-name" type="text" name="talk[name]" /></label>
    <button>Suggest Talk</button>
  </form>
</div>
